<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pokemon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context="com.example.eric.pokedex.PokemonActivity">

    <ImageView
        android:layout_width="152dp"
        android:layout_height="145dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/pokeImage"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:text="name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/pokeImage"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:text="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintRight_toRightOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="@+id/name"
        app:layout_constraintHorizontal_bias="0.38"
        android:textStyle="normal|bold"
        android:textSize="16sp" />

    <TextView
        android:text="attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attack"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/pokeImage"
        app:layout_constraintRight_toLeftOf="@+id/defense"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/hp"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif"
        app:layout_constraintHorizontal_bias="0.57" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/defense"
        android:text="defense"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/pokeImage"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hp"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/pokeImage"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/species"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/attack"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:text="Find Me on the Web!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/webSearch"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="168dp" />

    <TextView
        android:text="types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/types"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/species"
        app:layout_constraintBottom_toTopOf="@+id/webSearch"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />
</android.support.constraint.ConstraintLayout>
